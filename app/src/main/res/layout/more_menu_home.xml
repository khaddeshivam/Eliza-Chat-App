<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:id="@+id/tvHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:text="More"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvHeader">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp">

            <!-- Profile Section -->
            <ImageView
                android:id="@+id/ivProfile"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:padding="4dp"
                android:src="@drawable/user"
                android:contentDescription="Profile icon"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="8dp"
                android:text="Almayra Zamzamy"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@+id/ivProfile"
                app:layout_constraintEnd_toStartOf="@+id/ivArrow1"
                app:layout_constraintTop_toTopOf="@+id/ivProfile" />

            <TextView
                android:id="@+id/tvPhone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="+62 1309 - 1710 - 1920"
                android:textColor="@color/gray"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@+id/tvName"
                app:layout_constraintEnd_toStartOf="@+id/ivArrow1"
                app:layout_constraintTop_toBottomOf="@+id/tvName" />

            <ImageView
                android:id="@+id/ivArrow1"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/ic_chevron_right"
                android:contentDescription="Arrow right"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/ivProfile"
                app:layout_constraintBottom_toBottomOf="@+id/tvPhone" />

            <View
                android:id="@+id/divider1"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="@color/light_gray"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvPhone" />

            <!-- Account Section -->
            <ImageView
                android:id="@+id/ivAccount"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginTop="16dp"
                android:padding="4dp"
                android:src="@drawable/ic_person"
                android:contentDescription="Account icon"
                app:layout_constraintStart_toStartOf="@+id/ivProfile"
                app:layout_constraintTop_toBottomOf="@+id/divider1" />

            <TextView
                android:id="@+id/tvAccount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="8dp"
                android:text="Account"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/ivAccount"
                app:layout_constraintEnd_toStartOf="@+id/ivArrow2"
                app:layout_constraintStart_toEndOf="@+id/ivAccount"
                app:layout_constraintTop_toTopOf="@+id/ivAccount" />

            <ImageView
                android:id="@+id/ivArrow2"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/ic_chevron_right"
                android:contentDescription="Arrow right"
                app:layout_constraintBottom_toBottomOf="@+id/ivAccount"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/ivAccount" />

            <View
                android:id="@+id/divider2"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="@color/light_gray"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ivAccount" />

            <!-- Chats Section -->
            <ImageView
                android:id="@+id/ivChats"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginTop="16dp"
                android:padding="4dp"
                android:src="@drawable/ic_chat"
                android:contentDescription="Chats icon"
                app:layout_constraintStart_toStartOf="@+id/ivAccount"
                app:layout_constraintTop_toBottomOf="@+id/divider2" />

            <TextView
                android:id="@+id/tvChats"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="8dp"
                android:text="Chats"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/ivChats"
                app:layout_constraintEnd_toStartOf="@+id/ivArrow3"
                app:layout_constraintStart_toEndOf="@+id/ivChats"
                app:layout_constraintTop_toTopOf="@+id/ivChats" />

            <ImageView
                android:id="@+id/ivArrow3"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/ic_chevron_right"
                android:contentDescription="Arrow right"
                app:layout_constraintBottom_toBottomOf="@+id/ivChats"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/ivChats" />

            <View
                android:id="@+id/divider3"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="@color/light_gray"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ivChats" />

            <!-- Appearance Section -->
            <ImageView
                android:id="@+id/ivAppearance"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginTop="16dp"
                android:padding="4dp"
                android:src="@drawable/ic_appearance"
                android:contentDescription="Appearance icon"
                app:layout_constraintStart_toStartOf="@+id/ivChats"
                app:layout_constraintTop_toBottomOf="@+id/divider3" />

            <TextView
                android:id="@+id/tvAppearance"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="8dp"
                android:text="Appearance"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/ivAppearance"
                app:layout_constraintEnd_toStartOf="@+id/ivArrow4"
                app:layout_constraintStart_toEndOf="@+id/ivAppearance"
                app:layout_constraintTop_toTopOf="@+id/ivAppearance" />

            <ImageView
                android:id="@+id/ivArrow4"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/ic_chevron_right"
                android:contentDescription="Arrow right"
                app:layout_constraintBottom_toBottomOf="@+id/ivAppearance"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/ivAppearance" />

            <View
                android:id="@+id/divider4"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="@color/light_gray"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ivAppearance" />

            <!-- Notification Section -->
            <ImageView
                android:id="@+id/ivNotification"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginTop="16dp"
                android:padding="4dp"
                android:src="@drawable/ic_notify"
                android:contentDescription="Notification icon"
                app:layout_constraintStart_toStartOf="@+id/ivAppearance"
                app:layout_constraintTop_toBottomOf="@+id/divider4" />

            <TextView
                android:id="@+id/tvNotification"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="8dp"
                android:text="Notification"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/ivNotification"
                app:layout_constraintEnd_toStartOf="@+id/ivArrow5"
                app:layout_constraintStart_toEndOf="@+id/ivNotification"
                app:layout_constraintTop_toTopOf="@+id/ivNotification" />

            <ImageView
                android:id="@+id/ivArrow5"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/ic_chevron_right"
                android:contentDescription="Arrow right"
                app:layout_constraintBottom_toBottomOf="@+id/ivNotification"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/ivNotification" />

            <View
                android:id="@+id/divider5"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="@color/light_gray"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ivNotification" />

            <!-- Privacy Section -->
            <ImageView
                android:id="@+id/ivPrivacy"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginTop="16dp"
                android:padding="4dp"
                android:src="@drawable/ic_privacy"
                android:contentDescription="Privacy icon"
                app:layout_constraintStart_toStartOf="@+id/ivNotification"
                app:layout_constraintTop_toBottomOf="@+id/divider5" />

            <TextView
                android:id="@+id/tvPrivacy"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="8dp"
                android:text="Privacy"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/ivPrivacy"
                app:layout_constraintEnd_toStartOf="@+id/ivArrow6"
                app:layout_constraintStart_toEndOf="@+id/ivPrivacy"
                app:layout_constraintTop_toTopOf="@+id/ivPrivacy" />

            <ImageView
                android:id="@+id/ivArrow6"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/ic_chevron_right"
                android:contentDescription="Arrow right"
                app:layout_constraintBottom_toBottomOf="@+id/ivPrivacy"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/ivPrivacy" />

            <View
                android:id="@+id/divider6"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="@color/light_gray"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ivPrivacy" />

            <!-- Data Usage Section -->
            <ImageView
                android:id="@+id/ivDataUsage"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginTop="16dp"
                android:padding="4dp"
                android:src="@drawable/ic_data_usage"
                android:contentDescription="Data usage icon"
                app:layout_constraintStart_toStartOf="@+id/ivPrivacy"
                app:layout_constraintTop_toBottomOf="@+id/divider6" />

            <TextView
                android:id="@+id/tvDataUsage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="8dp"
                android:text="Data Usage"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/ivDataUsage"
                app:layout_constraintEnd_toStartOf="@+id/ivArrow7"
                app:layout_constraintStart_toEndOf="@+id/ivDataUsage"
                app:layout_constraintTop_toTopOf="@+id/ivDataUsage" />

            <ImageView
                android:id="@+id/ivArrow7"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/ic_chevron_right"
                android:contentDescription="Arrow right"
                app:layout_constraintBottom_toBottomOf="@+id/ivDataUsage"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/ivDataUsage" />

            <View
                android:id="@+id/divider7"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="@color/light_gray"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ivDataUsage" />

            <!-- Help Section -->
            <ImageView
                android:id="@+id/ivHelp"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginTop="16dp"
                android:padding="4dp"
                android:src="@drawable/ic_help"
                android:contentDescription="Help icon"
                app:layout_constraintStart_toStartOf="@+id/ivDataUsage"
                app:layout_constraintTop_toBottomOf="@+id/divider7" />

            <TextView
                android:id="@+id/tvHelp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="8dp"
                android:text="Help"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/ivHelp"
                app:layout_constraintEnd_toStartOf="@+id/ivArrow8"
                app:layout_constraintStart_toEndOf="@+id/ivHelp"
                app:layout_constraintTop_toTopOf="@+id/ivHelp" />

            <ImageView
                android:id="@+id/ivArrow8"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/ic_chevron_right"
                android:contentDescription="Arrow right"
                app:layout_constraintBottom_toBottomOf="@+id/ivHelp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/ivHelp" />

            <View
                android:id="@+id/divider8"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="@color/light_gray"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ivHelp" />

            <!-- Invite Friends Section -->
            <ImageView
                android:id="@+id/ivInvite"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginTop="16dp"
                android:padding="4dp"
                android:src="@drawable/ic_invite"
                android:scaleType="centerCrop"
                android:contentDescription="Invite friends icon"
                app:layout_constraintStart_toStartOf="@+id/ivHelp"
                app:layout_constraintTop_toBottomOf="@+id/divider8" />

            <TextView
                android:id="@+id/tvInvite"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="8dp"
                android:text="Invite Your Friends"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/ivInvite"
                app:layout_constraintEnd_toStartOf="@+id/ivArrow9"
                app:layout_constraintStart_toEndOf="@+id/ivInvite"
                app:layout_constraintTop_toTopOf="@+id/ivInvite" />

            <ImageView
                android:id="@+id/ivArrow9"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/ic_chevron_right"
                android:contentDescription="Arrow right"
                app:layout_constraintBottom_toBottomOf="@+id/ivInvite"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/ivInvite" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>